<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:based="clr-namespace:WpfExplorer.Support.UI.Units;assembly=WpfExplorer.Support"
                    xmlns:view ="clr-namespace:WpfExplorer.Forms.UI.Views">

    <Style 
        TargetType="{x:Type view:ExplorerWindow}"
        BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Content">
            <Setter.Value>
                <TextBlock
                    Text="Window Content"
                    Foreground="#FFFFFF"
                    Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>